<UserControl
    x:Class="AIOneWinUI.MessageControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AIOneWinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel VerticalAlignment="Center" Margin="0, 10, 0, 10">
		<TextBlock Text="{x:Bind Role}" FontWeight="Bold" FontSize="14"/>
		<Expander>
			<Expander.Header>
				<StackPanel Orientation="Horizontal">
					<TextBlock Text="Reasoning" VerticalAlignment="Center"/>
					<ProgressRing Margin="10, 0, 0, 0"/>
				</StackPanel>
			</Expander.Header>
			<TextBlock Text="{x:Bind Text}" TextWrapping="Wrap"/>
		</Expander>
		<TextBlock Text="{x:Bind Text}" TextWrapping="Wrap"/>
	</StackPanel>
</UserControl>
